- fuda_page.each_with_index do |fuda,index|
  .row
    .span5.fuda
      .row
        .pull-left
          %h4= fuda.id
        .pull-right
          %h4= yamafuda.name
      .row
        .span1 &nbsp;
      .row
        .text-center
          .front= simple_format fuda.front
          -# .radicals= fuda.kanji.flat_map(&:radicals).map(&:literal).join(' ')
      .row
        .pull-right Front
        .pull-left= "Page ##{page} (#{index + 1}/#{fuda_page.count})"

    .span5.fuda
      .row
        .pull-right
          %h4= yamafuda.name
      .row
        .span1 &nbsp;
      .row
        .text-center
          .back= simple_format fuda.back
      .row
        .pull-right Back
        .pull-left= "Page ##{page} (#{index + 1}/#{fuda_page.count})"

